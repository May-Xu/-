.container {
  background-color: #ffffff;
  min-height: 100%;
  display: block;
}
.Courier-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
  background-color: #ffffff;
}
.Courier-box{
  width: 339rpx;
  height: auto;
  box-shadow:0 3rpx 10px 2px lightgrey;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius:5px;
}
.Courier-box .img-box{
  height: 100px;
  width: 100%;
  overflow: hidden;
}
.Courier-box .img-box image{
   width: 100%;
   height: 100px;
}
.Courier-box .Courier-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 26rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.Courier-box .Courier-price{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color:#0066FF;
  margin-left: 24rpx;
}